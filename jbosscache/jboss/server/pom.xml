<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
 
   <groupId>com.kylin.jbosscache</groupId>
   <artifactId>jbosscache-jboss-ejb-remote-server</artifactId>
   <version>1.0</version>
   <packaging>ejb</packaging>
   <name>Server side of remote EJB</name>

   <url>https://github.com/kylinsoong/EJB</url>
   <licenses>
      <license>
         <name>Apache License, Version 2.0</name>
         <distribution>repo</distribution>
         <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
      </license>
   </licenses>

   <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <jboss.home>/home/kylin/work/eap/jboss-eap-5.1/jboss-as</jboss.home>
   </properties>
   
   <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.jboss.spec</groupId>
                <artifactId>jboss-javaee-6.0</artifactId>
                <version>3.0.0.Final</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

   <dependencies>
   
    <dependency>
		<groupId>org.jboss.ha</groupId>
	    <artifactId>jboss-ha-server</artifactId>
	    <version>cache-jbc</version>
	    <scope>system</scope>
	    <systemPath>${jboss.home}/common/lib/jboss-ha-server-cache-jbc.jar</systemPath>
	</dependency>
	
	<dependency>
		<groupId>org.jboss.cache</groupId>
	    <artifactId>jbosscache</artifactId>
	    <version>core</version>
	    <scope>system</scope>
	    <systemPath>${jboss.home}/server/all/lib/jbosscache-core.jar</systemPath>
	</dependency>
      
      <dependency>
            <groupId>org.jboss.spec.javax.ejb</groupId>
            <artifactId>jboss-ejb-api_3.1_spec</artifactId>
            <scope>provided</scope>
        </dependency>
      
     <dependency>
       <groupId>log4j</groupId>
       <artifactId>log4j</artifactId>
       <version>1.2.16</version>
       <scope>provided</scope>
    </dependency>
   </dependencies>

   <build>
		<finalName>remote-server</finalName>
      <plugins>
         <!-- Compiler plugin enforces Java 1.6 compatibility and activates 
            annotation processors -->
         <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.3.1</version>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
            </configuration>
         </plugin>
      <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-ejb-plugin</artifactId>
            <version>2.3</version>
            <configuration>
               <ejbVersion>3.1</ejbVersion>
               <!-- this is false by default -->
               <generateClient>true</generateClient>
            </configuration>
         </plugin>

      </plugins>
   </build>

</project>
